@model QuanLyBanGiayASP.Models.ViewModels.StoreImportDetailViewModels
@using QuanLyBanGiayASP.Extensions

@{
    ViewData["Title"] = "Create";
}



<br />
<h2 style="text-align:center" >Create Product Add To Import</h2>
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="p-4 border rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Name" class="form-control" />
                </div>
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.Image"></label>
                </div>
                <div class="col-5">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Merchants"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.Products.MerchantId" asp-items="Model.Merchants.ToSelectListItem(Model.Products.MerchantId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Brands"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.Products.BrandId" asp-items="Model.Brands.ToSelectListItemBrand(Model.Products.BrandId)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="TypeProducts"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.Products.TypeProductId" asp-items="Model.TypeProducts.ToSelectListItemTypeProduct(Model.Products.TypeProductId)" class="form-control"></select>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.Description"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Products.Description" class="form-control" />
                </div>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-5">
                    <input type="checkbox" asp-for="Products.Available" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <label asp-for="Products.InStock" for="tanggiam"></label>
                </div>
                <div class="col-5">
                    <input type="number" id="tanggiam" asp-for="Products.InStock" value="1" min="0" max="100000">
                </div>
                <span asp-validation-for="Products.InStock" class="text-danger"></span>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" value="Create" asp-route-id="@Model.Products.ID" class="btn btn-primary" />
                <a asp-action="Update" class="btn btn-success">Back to List</a>
                <a asp-action="Add" class="btn btn-success">Go to Import</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model QuanLyBanGiayASP.Models.ViewModels.ProductViewModels
@using QuanLyBanGiayASP.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center">Delete Product</h2>
<div class="container">
    <form method="post">
        <div class="p-4 border rounded row">
            <input hidden asp-for="Products.ID" />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Price" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Merchants"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Products.MerchantId" asp-items="Model.Merchants.ToSelectListItem(Model.Products.MerchantId)" readonly class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Brands"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Products.BrandId" asp-items="Model.Brands.ToSelectListItemBrand(Model.Products.BrandId)" readonly class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Description" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Available"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" readonly class="form-control" asp-for="Products.Available" />
                    </div>
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>


            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




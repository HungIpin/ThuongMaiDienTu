</div>





<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-heading text-center">
                <h2>Pro Products</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-12">
        <div class="popular-products-slides owl-carousel">

            @foreach (var product in Model.Products)
            {
                if (product.TypeProduct.TypePro == "PRO")
                {
                    <!-- Single Product -->
                    <div class="single-product-wrapper">
                        <!-- Product Image -->
                        <div class="product-img">
                            <img src="@product.Image" alt="">
                            <!-- Hover Thumb -->
                        </div>
                        <!-- Product Description -->
                        <div class="product-description">
                            <span>@product.Brands.Name</span>

                            <h5>@product.Name</h5>
                            <p class="product-price">$@product.Price</p>

                            <!-- Hover Content -->
                            <div class="hover-content" style="text-align:center">
                                <!-- Add to Cart -->
                                <div class="add-to-cart-btn" style="text-align:center">
                                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.ID" class="btn essence-btn  style=" text-align:center"">
                                        SHOP NOW
                                        <i class="fa fa-chevron-right "></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

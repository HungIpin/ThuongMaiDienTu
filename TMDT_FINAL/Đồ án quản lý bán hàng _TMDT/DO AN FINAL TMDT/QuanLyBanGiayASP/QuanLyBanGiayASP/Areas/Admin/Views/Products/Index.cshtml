    @model IEnumerable<QuanLyBanGiayASP.Models.Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<br />

<div class="row">
    <div class="col-12">
        <h2 style="text-align:center ">Danh sách sản phẩm</h2>
    </div>
</div>
<br />
<div class="container">
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    <span>Tên</span>
                </th>
                <th>
                    <span>Giá</span>
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Available)
                </th>
                <th>
                    <span>Mô tả</span>
                </th>
                <th>
                    <span>Nhà cung cấp</span>
                </th>
                <th>
                    <span>Nhãn hiệu</span>
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @String.Format("{0:c}", item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Available)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @if (!item.Merchants.Name_merchant.Equals("--None--"))
                        {
                            @Html.DisplayFor(m => item.Merchants.Name_merchant)
                        }

                    </td>
                    <td>
                        @if (!item.Brands.Name.Equals("--None--"))
                        {
                            @Html.DisplayFor(m => item.Brands.Name)
                        }

                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.ID" />
                    </td>
                </tr>

            }
        </table>
    </div>
</div>


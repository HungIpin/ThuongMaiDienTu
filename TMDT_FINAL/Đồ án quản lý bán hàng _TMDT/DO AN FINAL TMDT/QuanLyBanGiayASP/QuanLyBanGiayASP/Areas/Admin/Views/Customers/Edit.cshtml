@model QuanLyBanGiayASP.Models.Customers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center" >Chỉnh sửa khách hàng</h2>
<div class="container">
    <form method="post" asp-action="Edit">
        <div class="p-4 border rounded">
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="CustomerName" ></label>
                </div>
                <div class="col-5">
                    <input asp-for="CustomerName" class="form-control" />
                </div>
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Status" ></label>
                </div>
                <div class="col-5">
                    <input asp-for="Status" class="form-control" />
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Date" ></label>
                </div>
                <div class="col-5">
                    <input asp-for="Date" type="text" id="datepicker" class="form-control" />
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Email" ></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Phone" ></label>
                </div>
                <div class="col-5">
                    <input asp-for="Phone" class="form-control" />
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" asp-route-id="@Model.ID" value="Chỉnh sửa" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}




@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center">Chỉnh sửa nhà cung cấp</h2>
<div class="container">
    <form method="post" asp-action="Edit">
        <div class="p-4 border rounded">
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Name_merchant">Nhà cung cấp</label>
                </div>
                <div class="col-5">
                    <input asp-for="Name_merchant" class="form-control" />
                </div>
                <span asp-validation-for="Name_merchant" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Address">Địa chỉ</label>
                </div>
                <div class="col-5">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Phone">Phone</label>
                </div>
                <div class="col-5">
                    <input asp-for="Phone" class="form-control" />
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Description">Mô tả</label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" asp-route-id="@Model.ID" value="Cập nhật" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




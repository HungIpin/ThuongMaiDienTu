@model QuanLyBanGiayASP.Models.ViewModels.ProductViewModels
@using QuanLyBanGiayASP.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center">Xóa sản phẩm</h2>
<div class="container">
    <form method="post">
        <div class="p-4 border rounded row">
            <input hidden asp-for="Products.ID" />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Name">Tên</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Price">Giá</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Price" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Merchants">Nhà cung cấp</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Products.MerchantId" asp-items="Model.Merchants.ToSelectListItem(Model.Products.MerchantId)" readonly class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Brands">Nhãn hiệu</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Products.BrandId" asp-items="Model.Brands.ToSelectListItemBrand(Model.Products.BrandId)" readonly class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Description">Mô tả</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Products.Description" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Products.Available"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" readonly  asp-for="Products.Available" />
                    </div>
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>


            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Xóa" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




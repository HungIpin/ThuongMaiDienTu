@model QuanLyBanGiayASP.Models.TypeProduct
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<br />
<h2 style="text-align:center">Xóa loại sản phẩm</h2>
<div class="container">
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="TypePro">Tên</label>
                </div>
                <div class="col-5">
                    <input asp-for="TypePro" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.ID" value="Xóa" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>


@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center">Tạo nhà cung cấp</h2>

<div class="container">
    <form method="post" asp-action="Create">
        <div style="margin-top:20px"></div>
        <div class="p-4 border rounded">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Name_merchant">Nhà cung cấp</label>
                </div>
                <div class="col-5">
                    <input asp-for="Name_merchant" class="form-control" />
                </div>
                <span asp-validation-for="Name_merchant"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Address">Địa chỉ</label>
                </div>
                <div class="col-5">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Phone">Số điện thoại</label>
                </div>
                <div class="col-5">
                    <input asp-for="Phone" class="form-control" />
                </div>
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Description">Mô tả</label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description"></span>
            </div>
            <br />
            <div class="form-group" style="text-align:center    ">
                <input type="submit" class="btn btn-primary" value="Tạo" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






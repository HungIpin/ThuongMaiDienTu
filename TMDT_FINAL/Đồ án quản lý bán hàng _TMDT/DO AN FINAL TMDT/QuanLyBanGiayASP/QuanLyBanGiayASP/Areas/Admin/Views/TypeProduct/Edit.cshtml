@model QuanLyBanGiayASP.Models.TypeProduct
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<br />
<h2 style="text-align:center">Chỉnh sửa loại sản phẩm</h2>
<div class="container">
    <form method="post" asp-action="Edit">
        <div class="p-4 border rounded">
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="TypePro">Tên</label>
                </div>
                <div class="col-5">
                    <input asp-for="TypePro" class="form-control" />
                </div>
                <span asp-validation-for="TypePro" class="text-danger"></span>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-primary" asp-route-id="@Model.ID" value="Cập nhật" />
                <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
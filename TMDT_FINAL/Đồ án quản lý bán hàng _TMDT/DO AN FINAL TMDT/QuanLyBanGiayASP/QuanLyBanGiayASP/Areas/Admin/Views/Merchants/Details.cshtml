@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<br />
<h2 style="text-align:center" >Danh sách nhà cung cấp</h2>

<div class="p-4 border rounded container">
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Name_merchant" >Nhà cung cấp</label>
        </div>
        <div class="col-5">
            <input asp-for="Name_merchant" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Address" >Địa chỉ</label>
        </div>
        <div class="col-5">
            <input asp-for="Address" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Phone" >Số điện thoại</label>
        </div>
        <div class="col-5">
            <input asp-for="Phone" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Description" >Mô tả</label>
        </div>
        <div class="col-5">
            <input asp-for="Description" disabled class="form-control" />
        </div>
    </div>

    <br />
    <div style="text-align:center">
        
        <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
    </div>
</div>

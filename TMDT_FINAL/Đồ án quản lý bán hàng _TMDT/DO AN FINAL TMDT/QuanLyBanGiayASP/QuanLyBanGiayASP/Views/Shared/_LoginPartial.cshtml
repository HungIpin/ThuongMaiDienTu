@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div style="text-align:right" >
    @if (SignInManager.IsSignedIn(User))
    {
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-size:12px">@await Component.InvokeAsync("UserName")</a>
                <a>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </a>
    }
    else
    {
                <a style="font-size:12px" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                <a style="font-size:12px" class="nav-link " asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    }

</div>
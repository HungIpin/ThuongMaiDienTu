@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<br />
<h2 style="text-align:center">Delete Product Type</h2>
<div class="container">
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Name_merchant">Merchant</label>
                </div>
                <div class="col-5">
                    <input asp-for="Name_merchant" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Address">Adress</label>
                </div>
                <div class="col-5">
                    <input asp-for="Address" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Phone">Phone</label>
                </div>
                <div class="col-5">
                    <input asp-for="Phone" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Description">Desscription</label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" disabled class="form-control" />
                </div>
            </div>

            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.ID" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
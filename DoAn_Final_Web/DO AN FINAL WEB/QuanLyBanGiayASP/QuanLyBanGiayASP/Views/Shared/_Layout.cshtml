<body>
    <!-- ##### Header Area Start ##### -->
    <header class="header_area">
        <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
            <!-- Classy Menu -->
            <nav class="classy-navbar" id="essenceNav">
                <!-- Logo -->
                <a class="nav-brand" asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/img/core-img/logo.png" alt=""></a>
                <!-- Navbar Toggler -->
                <div class="classy-navbar-toggler">
                    <span class="navbarToggler"><span></span><span></span><span></span></span>
                </div>

                <!-- Menu -->
                <div class="classy-menu">
                    <!-- close btn -->
                    @*<div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>*@
                    <!-- Nav Start -->
                    <div class="classynav">
                        <ul>
                            <li>
                                <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    @if (User.IsInRole(SD.AdminEndUser) || User.IsInRole(SD.SuperAdminEndUser))
                                    {
                                        <li><a asp-area="Admin" asp-controller="Merchants" asp-action="Index">Merchant</a></li>
                                        <li><a asp-area="Admin" asp-controller="Brands" asp-action="Index">Brand</a></li>
                                        <li><a asp-area="Admin" asp-controller="Products" asp-action="Index">Product</a></li>
                                        @*<li><a asp-area="Admin" asp-controller="Customers" asp-action="Index">Customer</a></li>*@
                                        <li><a asp-area="Admin" asp-controller="TypeProduct" asp-action="Index">TypeProduct</a></li>
                                    }
                                    <li> <a asp-area="Customer" asp-action="Index" asp-controller="Shop">Shop</a></li>
                                </ul>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Customer" asp-controller="Contact" asp-action="Index">Contact</a>
                            </li>
                            @if (User.IsInRole(SD.AdminEndUser) || User.IsInRole(SD.SuperAdminEndUser))
                            {
                                <li><a asp-area="Admin" asp-controller="StoreImport" asp-action="Index">Import</a></li>
                                <li><a asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">Admin User</a></li>
                                <li><a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">Order</a></li>

                            }
                            @if (HttpContextAccessor.HttpContext.Session.Get<List<Amount_Product>>("ssShoppingCart") != null)
                            {
                                <li>
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">

                                        @{
                                            var count = HttpContextAccessor.HttpContext.Session.Get<List<Amount_Product>>("ssShoppingCart").Count;
                                        }
                                        <i class="fas fa-shopping-cart " style="margin-right:10px">( @count )</i> &nbsp;

                                    </a>
                                </li>


                            }
                            else
                            {
                                <li>
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                        <i class="fas fa-shopping-cart"></i> &nbsp;

                                        (0)
                                    </a>
                                </li>

                            }
                        </ul>
                    </div>
                    <!-- Nav End -->
                </div>
            </nav>

            <!-- Header Meta Data -->
            <div class="classy-menu">
                <partial name="_LoginPartial" />

            </div>
    </header>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Right Side Cart Area ##### -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

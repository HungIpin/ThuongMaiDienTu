@model IEnumerable<QuanLyBanGiayASP.Models.Customers>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 style="text-align:center"> Customer List</h2>
        </div>
    </div>
    </div>
    <br />
    <div class="container">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Phone)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Phone)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.ID" />
                    </td>
                </tr>

            }
        </table>
    </div>




